<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/profile_bg"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.ProfileFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        >

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:src="@drawable/profile_3d"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="20dp"/>


        <TextView
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lion Fischer"
            android:layout_marginTop="16dp"
            android:textSize="25sp"
            android:textStyle="bold"
            android:fontFamily="@font/nunito_black"
            android:textColor="@color/white"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="@id/imageView2"
            app:layout_constraintStart_toStartOf="@id/imageView2"
            app:layout_constraintTop_toBottomOf="@id/imageView2" />

        <TextView
            android:id="@+id/uesrEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="lionfischer@gmail.com"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:fontFamily="@font/nunito_bold"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="@+id/textView"
            app:layout_constraintStart_toStartOf="@+id/textView"
            app:layout_constraintTop_toBottomOf="@+id/textView" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/terms_conditions"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="32dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/edit_text_bg"
                android:drawableStart="@drawable/terms"
                android:drawablePadding="20dp"
                android:paddingStart="20dp"
                android:text="@string/terms_amp_conditions"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                style="@android:style/Widget.Button"
                android:textAlignment="viewStart" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/user_history"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="32dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/edit_text_bg"
                android:drawableStart="@drawable/baseline_history_toggle_off_24"
                android:drawablePadding="20dp"
                android:paddingStart="20dp"
                android:text="@string/payments_history"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                style="@android:style/Widget.Button"
                android:textAlignment="viewStart" />


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/user_feedback"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="32dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/edit_text_bg"
                android:drawableStart="@drawable/baseline_feedback_24"
                android:drawablePadding="20dp"
                android:paddingStart="20dp"
                android:text="Users Feedback"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                style="@android:style/Widget.Button"
                android:textAlignment="viewStart" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/logOut"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="32dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/edit_text_bg"
                android:drawableStart="@drawable/ic_baseline_loginout"
                android:drawablePadding="20dp"
                android:paddingStart="20dp"
                android:text="@string/log_out"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                style="@android:style/Widget.Button"
                android:textAlignment="viewStart" />
        </LinearLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>